<%- include ('partials/header') %>
    <% if(data) { %>
        <div class="alert alert-success alert-dismissible fade text-center show">
            <strong>Numero total de barras = <%= data %></strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    <% } %>    
    <div class="container">
        <h1 class="text-center">Test</h1>
        <div class="row mt-2 justify-content-center text-center">
            <div class="col-md-7 ">
                <div class="card">
                    <div class="card-body">
                        <form action="/do" method="POST">
                            <div class="form-group">
                                <input type="number" name="money" placeholder="Ingrese la cantidad dinero con que empieza (n)" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <input type="number" name="bar" placeholder="Ingrese el costo de cada barra (c)" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <input type="number" name="wrapper"
                                    placeholder="Ingrese la cantidad de envoltorios necesarios para devolver 1 barra (m)" class="form-control" required>
                            </div>
                            <button type="submit" class="btn btn-primary regular-button">Calcular</button>
                        </form>
                    </div>
                </div>
            </div>
        </div> 
    </div>
<%- include ('partials/footer') %>


